{% extends 'base.html.twig' %}


{% block links %}
    <ul>
        <li>
            {% if username is empty %}
                <h3><!-- not connected --></h3>
            {% else %}
                <h3>{{ username }} </h3>
            {% endif %}
            <a href="{{ path('home_page') }}">Home</a>
            <a href="{{ path('skill_home') }}">Skills</a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    {% if skills is empty %}
        <strong>You add no skills for the moment</strong>
        <a href="{{ path("skill_add") }}">Add your skills now !</a>
    {% else %}
        <h4>Your skills</h4>
        {% for skill in skills %}
            <ul>
                <li>
                    {{ skill.name }}
                </li>
                <li>
                    {{ skill.level }} / 3
                </li>
                <li><a href="{{ path('skill_delete',{'id': skill.id}) }}">Delete</a></li>
            </ul>
        {% endfor %}
        <a href="{{ path("skill_add") }}">Add a new skill</a>
    {% endif %}
{% endblock %}